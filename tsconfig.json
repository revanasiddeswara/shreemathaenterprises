{
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",

    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "bundler",

    "strict": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "preserve",

    "esModuleInterop": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "types": ["vite/client"],

    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"]
    }
  },

  "include": [
    "client/src/**/*",
    "shared/**/*"
  ],

  "exclude": [
    "node_modules",
    "dist",
    "server/**/*"
  ]
}
